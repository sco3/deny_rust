{
  "deny_word_lists": [
    {
      "name": "basic_profanity",
      "words": ["badword", "offensive", "inappropriate"]
    },
    {
      "name": "security_keywords",
      "words": ["password", "secret", "apikey", "token"]
    },
    {
      "name": "pii_keywords",
      "words": ["ssn", "creditcard", "passport", "dob"]
    },
    {
      "name": "single_word",
      "words": ["asdf"]
    },
    {
      "name": "case_sensitive",
      "words": ["Admin", "ROOT", "SysAdmin"]
    },
    {
      "name": "large_list",
      "words": ["word1", "word2", "word3", "word4", "word5", "word6", "word7", "word8", "word9", "word10",
                "word11", "word12", "word13", "word14", "word15", "word16", "word17", "word18", "word19", "word20"]
    },
    {
      "name": "special_chars",
      "words": ["test@example", "user#123", "data$value"]
    },
    {
      "name": "mixed_length",
      "words": ["a", "ab", "abc", "abcd", "abcdefghij", "verylongwordthatisunusual"]
    }
  ],
  "sample_texts": [
    {
      "name": "clean_text",
      "text": "This is a completely clean message with no issues",
      "should_block": false
    },
    {
      "name": "contains_badword",
      "text": "This message contains a badword in it",
      "should_block": true
    },
    {
      "name": "contains_password",
      "text": "Please enter your password here",
      "should_block": true
    },
    {
      "name": "contains_ssn",
      "text": "My ssn is 123-45-6789",
      "should_block": true
    },
    {
      "name": "contains_asdf",
      "text": "This contains asdf word",
      "should_block": true
    },
    {
      "name": "multiple_deny_words",
      "text": "This has both password and secret in it",
      "should_block": true
    },
    {
      "name": "case_variation",
      "text": "The Admin user has ROOT access",
      "should_block": true
    },
    {
      "name": "special_chars_text",
      "text": "Contact test@example for more info",
      "should_block": true
    },
    {
      "name": "long_text",
      "text": "This is a very long text that contains multiple sentences and paragraphs. It goes on and on with various content. Somewhere in here there might be a word1 that triggers the filter. The text continues with more information and details about various topics.",
      "should_block": true
    },
    {
      "name": "short_text",
      "text": "a",
      "should_block": true
    },
    {
      "name": "empty_text",
      "text": "",
